<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF7575"
    android:layout_height="64dp">

    <ImageView
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/imageSong"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/imageSong"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/tvNameOfSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đôi ta" />

        <TextView
            android:id="@+id/tvNameOfSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Đình Huân" />
    </LinearLayout>

    <ImageView
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:id="@+id/imageViewPre"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_baseline_skip_previous_24" />

    <ImageView
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewPre"
        android:id="@+id/imageViewPlayOrPause"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="5dp"/>

    <ImageView
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewPlayOrPause"
        android:id="@+id/imageViewNext"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_baseline_skip_next_24"/>

    <ImageView
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageViewNext"
        android:id="@+id/imageViewCancel"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_baseline_clear_24"/>

</RelativeLayout>